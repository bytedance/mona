{
  "private": true,
  "name": "mona-monorepo",
  "version": "0.0.1",
  "description": "mona",
  "main": "",
  "scripts": {
    "build": "lerna run build",
    "b": "node ./build",
    "s": "node ./build -s",
    "clean": "lerna run clean",
    "clean:dp": "lerna clean -y && rm -rf node_modules",
    "clean:all": "lerna run clean && lerna clean",
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "test:c": "jest --coverage",
    "v": "yarn v:lerna && yarn v:git",
    "v:lerna": "lerna version ${npm_config_lerna_version} --exact --no-git-tag-version --force-publish --yes",
    "v:git": "git add . && git commit -m \"chore(release): publish ${npm_config_lerna_version}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bytedance/mona"
  },
  "author": "zhangxiaowei.chris@bytedance.com",
  "license": "MIT",
  "workspaces": [
    "packages/mona*",
    "packages/mona-commands/*",
    "packages/mona-clients/*"
  ],
  "packageManager": "yarn@1.22.4",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@testing-library/jest-dom": "^5.16.1",
    "@types/enzyme": "^3.10.10",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/semver": "^7.3.9",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "babel-jest": "^27.3.1",
    "canvas": "^2.8.0",
    "enzyme": "^3.11.0",
    "fs-extra": "^10.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-dom": "^4.0.0",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "semver": "^7.3.5",
    "typescript": "^4.4.4"
  }
}
