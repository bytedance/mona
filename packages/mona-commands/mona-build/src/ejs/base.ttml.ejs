<template name="mona-base">
  <template is="{{ 'mona-' + root.type }}" data="{{ node: root }}"></template>
</template>

<template name="mona-view">
  <view>
    <template tt:for="{{node.children}}" tt:key={{item.key}} is="{{ 'mona-' + item.type }}" data="{{ node: item }}"></template>
  </view>
</template>

<template name="mona-text">
  <text>
    <template tt:for="{{node.children}}" tt:key={{item.key}} is="{{ 'mona-' + item.type }}" data="{{ node: item }}"></template>
  </text>
</template>

<template name="mona-ptext">
  <block>{{node.text}}</block>
</template>